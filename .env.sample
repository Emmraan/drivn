# Database
MONGODB_URI=mongodb://localhost:27017/drivn
MONGODB_DB=drivn

# environment config
NODE_ENV=development

# NextAuth.js
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here-change-in-production

# JWT
JWT_SECRET=your-jwt-secret-here-change-in-production

# Google OAuth (to be configured)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Email Configuration (to be configured)
EMAIL_SERVER_HOST=smtp.gmail.com
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=your-email@gmail.com
EMAIL_SERVER_PASSWORD=your-app-password
EMAIL_FROM=your-email@gmail.com

# App Configuration
APP_NAME=DRIVN
NEXT_PUBLIC_APP_URL=http://localhost:3000

# S3 Encryption Secret
ENCRYPTION_SECRET=your-encryption-secret

# DRIVN Default S3 Configuration (Admin-managed bucket)
DRIVN_S3_ACCESS_KEY_ID=your-drivn-s3-access-key
DRIVN_S3_SECRET_ACCESS_KEY=your-drivn-s3-secret-key
DRIVN_S3_REGION=us-east-1
DRIVN_S3_BUCKET=drivn-default-storage
DRIVN_S3_ENDPOINT=https://s3.amazonaws.com
DRIVN_S3_FORCE_PATH_STYLE=false

# Admin Configuration
ADMIN_EMAIL=admin@drivn.com

# Custom form validator configuration
VALIDATION_STRONG=false # Set to true to enable external validation
VALIDATOR_API_KEY=your-validator-api-key-here
VALIDATOR_URL=https://your-validator-url-here.com/api/validate
